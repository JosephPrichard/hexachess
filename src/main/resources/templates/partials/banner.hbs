    const profileElem = document.getElementById("profile");
    const cookieValue = getSessionCookie();

    if (cookieValue) {
        profileElem.innerHTML = `
            <a href="/players/${cookieValue.playerId}" class="banner-elem color-hover">
                ${cookieValue.username}
            </a>
            <a href="/settings" class="banner-elem color-hover" style="font-weight: bold; font-size: 24px;">
                &#x2699;
            </a>`;
    } else {
        profileElem.innerHTML = '<a href="/login" class="banner-elem color-hover"> Login </div>';
    }
</script>